<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <!-- 读取外部配置文件 -->
    <properties resource="generatorConfig.properties"/>

    <context id="testTables" targetRuntime="MyBatis3">
        <!-- 自动识别数据库关键字，默认false，如果设置为true，根据SqlReservedWords中定义的关键字列表；
            一般保留默认值，遇到数据库关键字（Java关键字），使用columnOverride覆盖 -->
        <property name="autoDelimitKeywords" value="false"/>
        <!-- 生成的Java文件的编码-->
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- 格式化java代码-->
        <property name="javaFormatter" value="org.mybatis.generator.api.dom.DefaultJavaFormatter"/>
        <!-- 格式化XML代码-->
        <property name="xmlFormatter" value="org.mybatis.generator.api.dom.DefaultXmlFormatter"/>

        <!--Example替换成Criteria-->
        <plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
            <property name="searchString" value="Example$"/>
            <property name="replaceString" value="Criteria"/>
        </plugin>
        <!--虚拟组件，针对表没有设置主键的时候使用-->
        <plugin type="org.mybatis.generator.plugins.VirtualPrimaryKeyPlugin"/>
        <!-- ToString -->
        <plugin type="com.alijk.bq.mybatis.plugin.ToStringGenerator"/>


        <!-- TODO 自定义group插件 直接使用会导致 mybatis 找不到类, 一般做法将插件打成jar包引入项目 -->
        <!--<plugin type="com.alijk.bqface.dal.plugin.GeneratorGroupPlugin"/>-->

        <!--<commentGenerator>-->
        <!--    &lt;!&ndash; 是否去除自动生成的注释 true：是 ： false:否 &ndash;&gt;-->
        <!--    <property name="suppressAllComments" value="true"/>-->
        <!--</commentGenerator>-->

        <!-- 生成pojo 注释,包括类、字段 -->
        <commentGenerator type="com.alijk.bq.mybatis.plugin.DiyCommentGenerator"/>

        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
        <jdbcConnection driverClass="${driverClass}"
                        connectionURL="${connectionURL}"
                        userId="${userId}"
                        password="${password}">
            <!--设置为 true 可以获取 tables 信息, 解决生成文件缺少 xxxByPrimaryKey 的问题 -->
            <property name="useInformationSchema" value="true"/>
        </jdbcConnection>

        <!-- 默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer，为 true时把JDBC DECIMAL 和
           NUMERIC 类型解析为java.math.BigDecimal -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- targetProject:生成POJO类的位置 -->
        <javaModelGenerator targetPackage="com.alijk.bqhealth.cloud.dal.datamapper.hot.survey.pojo" targetProject="./src/main/java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false"/>
            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- mapper.xml映射文件生成的位置-->
        <sqlMapGenerator targetPackage="datasqlmapper/hotsurveymapper" targetProject="./src/main/resources">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!-- targetPackage：mapper接口生成的位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.alijk.bqhealth.cloud.dal.datamapper.hot.survey.mapper"
                             targetProject="./src/main/java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <!-- 数据库表 -->
        <table tableName="bqhealth_cloud_hot_survey_user_info" domainObjectName="HealthCloudHotSurveyUserDO">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
            <columnOverride column="is_deleted" javaType="Boolean"/>
        </table>

        <!--<table tableName="bqhealth_cloud_hot_survey_report" domainObjectName="HealthCloudHotSurveyReportDO">-->
        <!--    <generatedKey column="id" sqlStatement="MySql" identity="true"/>-->
        <!--    <columnOverride column="is_deleted" javaType="Boolean"/>-->
        <!--</table>-->

        <!--<table tableName="bqhealth_cloud_hot_survey_touch_user" domainObjectName="HealthCloudHotSurveyTouchUserDO">-->
        <!--    <generatedKey column="id" sqlStatement="MySql" identity="true"/>-->
        <!--    <columnOverride column="is_deleted" javaType="Boolean"/>-->
        <!--</table>-->

        <!--<table tableName="bqhealth_cloud_hot_survey_symptoms" domainObjectName="HealthCloudHotSurveySymptomsDO">-->
        <!--    <generatedKey column="id" sqlStatement="MySql" identity="true"/>-->
        <!--    <columnOverride column="is_deleted" javaType="Boolean"/>-->
        <!--</table>-->

    </context>
</generatorConfiguration>